{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/@types"],
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "target": "es2017",
    "module": "commonjs",
    "experimentalDecorators": true,
    "noEmit": true,
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "strict": false,
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es7",
      "es2016",
      "es2017",
      "esnext"
    ]
  },
  "rootDir": "src",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
